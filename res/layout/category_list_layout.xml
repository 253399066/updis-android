<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:id="@+id/linlayoutid"
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/market_headtitle_id"
            android:background="@drawable/top_nav_banner_bg_drawable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="18.0sp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:id="@+id/category_headline"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:singleLine="true"
                android:layout_weight="1.0"
                android:marqueeRepeatLimit="marquee_forever"/>

        <ImageView
                android:id="@+id/back_to_previous"
                android:background="@drawable/click_selector"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/back"/>
    </LinearLayout>

    <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/two_btn_layout"/>

    <LinearLayout
            android:id="@+id/body_layout_id"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
</LinearLayout>
