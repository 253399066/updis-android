<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:background="@drawable/list2"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">

    <RelativeLayout
        android:background="@drawable/list_item_selector"
        android:layout_marginTop="@dimen/margin_vertical"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_project_height">

        <TextView
            android:id="@+id/project_name"
            android:textColor="@color/about_gray"
            style="@style/ResourceDetailsLabel.Small"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/right_arrow_line"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            style="@style/ResourceDetailsLabel.Small"
            android:layout_toLeftOf="@+id/right_arrow"
            android:id="@+id/project_num"
            android:textColor="@color/about_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>