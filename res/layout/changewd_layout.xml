<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:orientation="vertical"
        android:id="@+id/body_container"
        android:background="@drawable/bg_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:id="@+id/logo_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        <ImageView
                android:id="@+id/query_logo"
                android:background="@drawable/titles_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/query_user_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:layout_marginBottom="30.0dip"
            android:layout_below="@id/logo_area"
            android:layout_centerHorizontal="true">

        <RelativeLayout
                android:id="@+id/query_pannel"
                android:background="@drawable/input3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip">

            <TextView
                    android:id="@+id/tag_query_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/updis_change_pwd_now"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    style="@style/login_layout_txt_tag"/>

            <EditText
                    android:textSize="20.0sp"
                    android:id="@+id/txt_pwd_now"
                    android:background="@null"
                    android:paddingTop="3.0dip"
                    android:paddingRight="20.0dip"
                    android:paddingBottom="3.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="3.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:layout_toRightOf="@id/tag_query_username"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/query_dept_panel"
                android:background="@drawable/input3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip">

            <TextView
                    android:id="@+id/tag_query_dept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/updis_change_pwd_new"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    style="@style/login_layout_txt_tag"/>

            <EditText
                    android:textSize="20.0sp"
                    android:id="@+id/txt_pwd_new"
                    android:background="@null"
                    android:paddingTop="3.0dip"
                    android:paddingRight="20.0dip"
                    android:paddingBottom="3.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="3.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:layout_toRightOf="@id/tag_query_dept"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/query_subject_panel"
                android:background="@drawable/input3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip">

            <TextView
                    android:id="@+id/tag_query_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/updis_change_pwd_new2"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    style="@style/login_layout_txt_tag"/>

            <EditText
                    android:textSize="20.0sp"
                    android:id="@+id/txt_pwd_new2"
                    android:background="@null"
                    android:paddingTop="3.0dip"
                    android:paddingRight="20.0dip"
                    android:paddingBottom="3.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="3.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:layout_toRightOf="@id/tag_query_subject"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/query_user_area"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

        <Button
                android:textSize="24.0sp"
                android:textColor="@color/white"
                android:id="@+id/btn_query"
                android:background="@drawable/btnbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/updis_confirm"/>
    </LinearLayout>
</RelativeLayout>
