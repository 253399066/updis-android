<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <include
            android:visibility="gone"
            layout="@layout/top_navbar_layout"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/bodyview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/setting_panel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="18.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:text="@string/setting_push_title"
                        style="@style/ResourceDetailsLabel.Large"/>

                <include layout="@layout/info_push_content"/>

                <TextView
                        android:textSize="18.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:text="@string/setting_push_time_title"
                        style="@style/ResourceDetailsLabel.Large"/>

                <include layout="@layout/info_push_time_content"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:isScrollContainer="true"/>

                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/push_setting_about_line"
                        android:background="@drawable/shape_bg"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginRight="10.0dip">

                    <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/setting_about"
                            android:layout_weight="1.0"
                            style="@style/ResourceDetailsLabel.Large"/>

                    <ImageView
                            android:layout_width="12.0dip"
                            android:layout_height="12.0dip"
                            android:layout_marginRight="10.0dip"
                            android:src="@drawable/into_icon"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:isScrollContainer="true"/>

                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/push_setting_feedback_line"
                        android:background="@drawable/shape_bg"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginRight="10.0dip">

                    <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/setting_feekback"
                            android:layout_weight="1.0"
                            style="@style/ResourceDetailsLabel.Large"/>

                    <ImageView
                            android:layout_width="12.0dip"
                            android:layout_height="12.0dip"
                            android:layout_marginRight="10.0dip"
                            android:src="@drawable/into_icon"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:isScrollContainer="true"/>

                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/push_setting_version_line"
                        android:background="@drawable/shape_bg"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginRight="10.0dip">

                    <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/setting_version"
                            android:layout_weight="1.0"
                            style="@style/ResourceDetailsLabel.Large"/>

                    <TextView
                            android:id="@+id/txt_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25.0dip"
                            android:visibility="gone"
                            android:text="@string/setting_version"
                            style="@style/ResourceDetailsLabel.Large"/>

                    <ImageView
                            android:layout_width="12.0dip"
                            android:layout_height="12.0dip"
                            android:layout_marginRight="10.0dip"
                            android:src="@drawable/into_icon"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:isScrollContainer="true"/>

                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/push_setting_check_version_line"
                        android:background="@drawable/shape_bg"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginRight="10.0dip">

                    <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/setting_check_version"
                            android:layout_weight="1.0"
                            style="@style/ResourceDetailsLabel.Large"/>

                    <TextView
                            android:id="@+id/txt_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25.0dip"
                            android:visibility="gone"
                            android:text="@string/setting_version"
                            style="@style/ResourceDetailsLabel.Large"/>

                    <ImageView
                            android:layout_width="12.0dip"
                            android:layout_height="12.0dip"
                            android:layout_marginRight="10.0dip"
                            android:src="@drawable/into_icon"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:isScrollContainer="true"/>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <Button
                            android:textSize="24.0sp"
                            android:textColor="@color/white"
                            android:id="@+id/btn_logout"
                            android:background="@drawable/btn10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/updis_logout"
                            android:layout_centerInParent="true"/>
                </RelativeLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:isScrollContainer="true"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:isScrollContainer="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
