<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:descendantFocusability="blocksDescendants"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/uu_necessaryapp_item_bg">

        <TextView
                android:id="@+id/txt_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/ResourceDetailsLabel.Large"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:fadingEdge="none"/>

        <TextView
                android:id="@+id/txt_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/ResourceDetailsLabel.Small"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingRight="8dp"
                android:ellipsize="marquee"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textSize="16sp"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="6.0dip"
                android:orientation="horizontal"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/resource_icon"
                    android:layout_width="66dp"
                    android:layout_height="86dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:contentDescription="@null"
                    android:src="@drawable/ap_uu_icon"
                    android:visibility="gone"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                <TextView
                        android:id="@+id/txt_date"
                        style="@style/ResourceDetailsLabel.Small"
                        android:ellipsize="end"/>

                <TextView
                        android:id="@+id/txt_commentcount"
                        style="@style/ResourceDetailsLabel.Small"
                        android:ellipsize="marquee"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>