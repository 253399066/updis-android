<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:id="@+id/label_detail_id"
            android:background="@drawable/uu_necessaryapp_item_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/resource_icon"
                android:layout_width="66dp"
                android:layout_height="86dp"
                android:layout_marginLeft="5.0dip"
                android:contentDescription="@null"
                android:src="@drawable/person_no_pic"
                android:layout_centerVertical="true"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="6.0dip"
                android:layout_toRightOf="@id/resource_icon"
                android:layout_centerVertical="true">

            <TextView
                    android:id="@+id/txt_title"
                    android:fadingEdge="none"
                    style="@style/ResourceDetailsLabel.Large"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:ellipsize="end"
                        android:id="@+id/txt_date"
                        style="@style/ResourceDetailsLabel.Small"/>

                <TextView
                        android:ellipsize="marquee"
                        android:id="@+id/txt_commentcount"
                        style="@style/ResourceDetailsLabel.Small"/>
            </LinearLayout>

            <TextView
                    android:ellipsize="marquee"
                    android:id="@+id/txt_subtitle"
                    style="@style/ResourceDetailsLabel.Small"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
