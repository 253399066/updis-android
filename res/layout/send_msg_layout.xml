<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:id="@+id/body_container"
        android:background="@drawable/bg_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:m="http://schemas.android.com/apk/res/com.tianv.updis">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="fill_parent">

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/detail_logo"
                    android:background="@drawable/titles_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"/>


            <RelativeLayout
                    android:id="@+id/query_category_panel"
                    android:background="@drawable/input4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="10.0dip">

                <TextView
                        android:id="@+id/tag_query_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/updis_send_msg_category"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        style="@style/login_layout_txt_tag"/>

                <TextView
                        android:textSize="20.0sp"
                        android:id="@+id/txt_query_category"
                        android:background="@null"
                        android:paddingTop="3.0dip"
                        android:paddingRight="20.0dip"
                        android:paddingBottom="3.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginTop="3.0dip"
                        android:layout_marginRight="3.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_toRightOf="@id/tag_query_category"/>
            </RelativeLayout>



            <RelativeLayout
                    android:id="@+id/query_dept_pannel"
                    android:background="@drawable/input3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="10.0dip">

                <TextView
                        android:id="@+id/tag_query_dept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/updis_send_msg_dept"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        style="@style/login_layout_txt_tag"/>

                <EditText
                        android:textSize="20.0sp"
                        android:id="@+id/txt_query_dept"
                        android:background="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:editable="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="3.0dip"
                        android:layout_marginTop="3.0dip"
                        android:layout_marginBottom="3.0dip"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_toRightOf="@id/tag_query_dept"
                        android:imeOptions="actionNext"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/query_title_pannel"
                    android:background="@drawable/input3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="10.0dip">

                <TextView
                        android:id="@+id/tag_query_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/updis_send_msg_title"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        style="@style/login_layout_txt_tag"/>

                <EditText
                        android:textSize="20.0sp"
                        android:id="@+id/txt_query_title"
                        android:background="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:editable="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="3.0dip"
                        android:layout_marginTop="3.0dip"
                        android:layout_marginBottom="3.0dip"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_toRightOf="@id/tag_query_title"
                        android:imeOptions="actionNext"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/query_content_pannel"
                    android:background="@drawable/input3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="10.0dip">

                <TextView
                        android:id="@+id/tag_query_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/updis_send_msg_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        style="@style/login_layout_txt_tag"/>

                <EditText
                        android:textSize="20.0sp"
                        android:id="@+id/txt_query_content"
                        android:background="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:editable="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="3.0dip"
                        android:layout_marginTop="3.0dip"
                        android:layout_marginBottom="3.0dip"
                        android:singleLine="false"
                        android:layout_toRightOf="@id/tag_query_content"
                        android:imeOptions="actionDone"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:layout_centerHorizontal="true">

                <Button
                        android:textSize="24.0sp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:id="@+id/btn_query"
                        android:background="@drawable/btnbg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
