<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/space_id"
        android:background="@drawable/quickaction_bg"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="73.0dip"
        android:layout_marginTop="-8.0dip"
        android:layout_below="@id/label_detail_id"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <HorizontalScrollView
            android:id="@+id/scroll"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true">

        <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/tracks"
                android:paddingTop="4.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:textSize="14.0sp"
                    android:textColor="@color/state_blue_color"
                    android:id="@+id/download_btn_id"
                    android:background="@drawable/space_btn_selector"
                    android:paddingLeft="10.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download_free"
                    android:drawableLeft="@drawable/btn_download"
                    android:layout_weight="1.0"/>

            <Button
                    android:textSize="14.0sp"
                    android:textColor="@color/state_blue_color"
                    android:id="@+id/jijie_btn_id"
                    android:background="@drawable/space_btn_selector"
                    android:paddingLeft="10.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:text="@string/ji_jie"
                    android:drawableLeft="@drawable/btn_jijie"
                    android:layout_weight="1.0"/>

            <Button
                    android:textSize="14.0sp"
                    android:textColor="@color/state_blue_color"
                    android:id="@+id/share_btn_id"
                    android:background="@drawable/space_btn_selector"
                    android:paddingLeft="10.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:drawableLeft="@drawable/btn_share"
                    android:layout_weight="1.0"/>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
